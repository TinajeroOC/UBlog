<!doctype html>
<html lang="en" data-theme="light">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{globalData.name}}</title>
  <link rel="stylesheet" type="text/css" href="/assets/css/_remake.css">
  <link rel="stylesheet" type="text/css" href="/assets/css/_tailwind_main.css">
</head>
<body>
  {{!-- Navbar --}}
  <div class="navbar bg-base-100">
    <div class="navbar-start">
      <div class="dropdown">
        <label tabindex="0" class="btn btn-ghost btn-circle">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
        </label>
        <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
          <li><a href="/{{currentUser.details.username}}">Home</a></li>
          <li><a>About</a></li>
        </ul>
      </div>
    </div>
    <div class="navbar-center">
      <a class="btn btn-ghost normal-case text-xl" href="/{{currentUser.details.username}}">{{globalData.name}}</a>
    </div>
    <div class="navbar-end">
      {{#if currentUser }}
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-circle avatar">
            <div class="w-10 rounded-full">
              <img src="/assets/images/avatar.jpg" />
            </div>
          </label>
          <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
            <li><a href="/user/logout">Logout</a></li>
          </ul>
        </div>
      {{else}}
        <a class="btn btn-primary" href="/user/login">Log In</a>
        &nbsp;
        &nbsp;
        <a class="btn btn-primary" href="/user/signup">Sign Up</a>
      {{/if}}
    </div>
  </div>
  {{!-- Alerts --}}
  {{> alerts }}
  {{> yield }}
  {{#if isPageAuthor}}
    {{!-- Prevent loading the Remake framework if the page isn't editable --}}
    <script src="/assets/js/vendor/Sortable.min.js"></script>
    <script src="/assets/js/vendor/crostini.min.js"></script>
    <script src="/remake/js/remake.min.js"></script>
    <script src="/assets/js/remake-init.js"></script>
  {{/if}}
  {{!-- Footer --}}
  <footer class="footer footer-center p-4 bg-base-100 text-base-content">
    <aside>
      <p>Copyright Â© 2023 - All rights reserved by {{globalData.name}}</p>
    </aside>
  </footer>
  <script src="/assets/js/main.js"></script>
</body>
</html>