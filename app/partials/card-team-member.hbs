<div class="flex items-center justify-center p-8 rounded-2xl shadow-lg bg-base-300">
  <div class="flex flex-col sm:flex-row items-center gap-8">
    <div class="avatar w-24 rounded-full ring ring-accent ring-offset-base-300 ring-offset-2">
      <div class="mask mask-circle">
        <img src="assets/images/{{imageName}}"/>
      </div>
    </div>
    <div>
      <h3 class="font-bold text-lg">{{name}}</h3>
      <ul class="list-inside">
        {{#each details}}
        <li class="list-disc">{{this}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>