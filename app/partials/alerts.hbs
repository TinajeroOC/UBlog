  <div class="flex flex-row justify-center">
    <div class="stack absolute w-1/2 m-4">
      {{!-- Show errors --}}
      {{#if flashErrors }}
        {{#each flashErrors }}
          {{> alert-error this }}
        {{/each}}
      {{/if}}
      {{!-- Show success messages --}}
      {{#if flashSuccesses }}
        {{#each flashSuccesses }}
          {{> alert-success this }}
        {{/each}}
      {{/if}}
    </div>
  </div>