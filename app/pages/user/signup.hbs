{{ layout "access" }}
<div class="w-full min-h-screen bg-base-200 flex justify-center items-center">
  <div class="card w-11/12 max-w-lg shadow-2xl bg-base-100">
    <div class="card-body">
      <div class="flex flex-row justify-between">
        <a href="/" class="inline-flex items-center font-semibold text-xl">{{globalData.name}}</a>
        <span class="inline-flex items-center text-lg text-right">Sign Up</span>
      </div>
      <form action="/user/signup" method="post">
        <div class="form-control">
          <label class="label">
            <span class="label-text">Username</span>
          </label>
          <input type="text" name="username" placeholder="Username" class="input input-bordered" required />
        </div>
        <div class="form-control">
          <label class="label">
            <span class="label-text">Email</span>
          </label>
          <input type="text" name="email" placeholder="Email" class="input input-bordered" required />
        </div>
        <div class="form-control">
          <label class="label">
            <span class="label-text">Password</span>
          </label>
          <input type="password" name="password" placeholder="Password" class="input input-bordered" required />
        </div>
        <div class="form-control mt-4">
          <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>
