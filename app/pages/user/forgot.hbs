{{ layout "access" }}
<div class="w-full min-h-screen bg-base-200 flex justify-center items-center">
  <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
    <div class="card-body">
      <div class="flex space-between">
        <p class="text-xl font-semibold">UBlog</p>
        <p class="text-lg text-right">Forgot Password</p>
      </div>
      <form action="/user/forgot" method="post">
        <div class="form-control">
          <label class="label">
            <span class="label-text">Username</span>
          </label>
          <input type="text" name="username" placeholder="username" class="input input-bordered" required />
        </div>
        <div class="form-control mt-6">
          <button type="submit" class="btn btn-primary">Reset Password</button>
        </div>
      </form>
    </div>
  </div>
</div>
