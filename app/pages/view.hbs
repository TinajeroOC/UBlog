{{#or (isTruthy currentItem.visible) isPageAuthor}}
<div class="min-h-screen min-w-full bg-base-200 flex justify-center">
  <div class="flex flex-col gap-4 my-16 w-11/12 max-w-7xl">
    <div class="flex justify-start">
      <a href="/{{pageAuthor.details.username}}" class="btn btn-neutral">Back to Blogs</a>
    </div>
    <div class="card shadow-lg bg-base-100">
      <div class="card-body card-normal">
        <span class="badge badge-outline badge-accent mb-2">{{currentItem.tag}}</span>
        <h2 class="card-title break-words">{{currentItem.title}}</h2>
        <p class="break-words">{{currentItem.text}}</p>
      </div>
    </div>
  </div>
</div>
{{else}}
{{> no-access}}
{{/or}}